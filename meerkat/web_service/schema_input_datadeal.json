{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "meerkat_categorize input schema",
	"definitions": {
		"transaction_record": {
			"type": "object",
			"properties": {
				"transaction_id" : { "type": "number" },
				"description" : { "type": "string" },
				"input_description" : { "type": "string" },
				"city": { "type": "string" },
				"state": { "type": "string" },
				"country": { "type": "string" },
				"postal_code": { "type": "string" },
				"RNN_merchant_name": { "type": "string" },
				"website_url": { "type": "string" },
				"store_number": {
					"type": "array",
					"items": {"type": "string"}
				},
				"phone_number": { "type": "string" },
				"amount" : { "type": "number" },
				"ledger_entry" : { "enum" : [ "debit", "credit" ] },
				"date" : { "type": "string" }
			},
			"additionalProperties" : false,
			"required": ["transaction_id", "description", "amount", "date", "ledger_entry"]
		}
	},
	"description": "A schema for defining input into 'meerkat_categorize'",
	"type" : "object",
	"properties" : {
		"cobrand_id" : {
			"description" : "Yodlee's number to uniquely identify the cobrand",
			"type" : "number"
		},
		"user_id" : {
			"description" : "Yodlee's number to uniquely identify a user within a cobrand",
			"type" : "number"
		},
		"container" : { "enum" : [ "bank", "card" ] },
		"debug" : { "enum" : [ true, false ] },
		"transaction_list" : {
			"description" : "An array containing at least one transaction_record.",
			"type" : "array",
			"items" : {
				"allOf": [
					{"$ref": "#/definitions/transaction_record"}
				]
			},
			"minItems": 1,
			"maxItems": 1000,
			"uniqueItems": true
		},
		"user_city" : {
			"description" : "User's city",
			"type" : "string"
		},
		"user_state" : {
			"description" : "User's state",
			"type" : "string"
		},
		"user_country" : {
			"description" : "User's country",
			"type" : "string",
			"maxLength" : 2,
			"minLength" : 2
		},
		"cobrand_region" : {
			"description" : "Cobrand's region",
			"type" : "integer"
		},
		"services_list" : {
			"description" : "Services to be enabled",
			"type" : "array",
			"items" : {
				"type" : "string"
			},
			"minItems" : 1
		}
	},
	"required": ["cobrand_id", "user_id", "container", "transaction_list"],
	"additionalProperties" : false
}
